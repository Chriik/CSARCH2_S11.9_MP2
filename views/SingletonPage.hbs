<!doctype html>
<html lang="en" style="height:100%;">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;1,200;1,300;1,400;1,600;1,700;1,800&family=Roboto:ital,wght@0,100;0,300;1,100;1,300&display=swap" rel="stylesheet">
    <!-- Custom Styles -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    <!-- JQuery --->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <title>BSA MRU</title>
</head>

<body style="height:100%;">
  <nav class="navbar navbar-expand-lg"> <a class="navbar-brand" href="/"><span id="navbar-brand-cache">CACHE</span><span id="navbar-brand-me">ME</span></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <a class="nav-link px-4" id="nav-link-user-guide" href="#">User guide</a>
        <li class="nav-item dropdown"> <a class="nav-link btn btn-primary dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Simulate </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown"> <a class="dropdown-item" href="/simpleton">Simpleton</a> <a class="dropdown-item" href="/sequential">Sequential</a> </div>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container-fluid p-3 h-100">
  <div class="row justify-content-center align-items-center h-100"> 
    <h1 class="text-center">Simpleton BSA Simulator</h1>
    <div class="col-10 h-75">
      <div class="card">
        <div class="card-header">Configuration</div>
        <div class="card-body">
          <div class="row">
            <div class="col-6">
              <label for="wordSize">Word size</label>
              <div class="input-group pb-2">
                <input type="text" class="form-control" id="wordSize" aria-label="wordSize">
                <div class="input-group-append">
                  <span class="input-group-text">bits</span>
                </div>
              </div>

              <label for="blockSize">Block size</label>
              <div class="input-group pb-2">
                <input type="text" class="form-control" id="blockSize" aria-label="blockSize">
                <div class="input-group-append">
                  <span class="input-group-text">words</span>
                </div>
              </div>
              
              <label for="setSize">Set size</label>
              <div class="input-group pb-2">
                <input type="text" class="form-control" id="setSize" aria-label="setSize">
                <div class="input-group-append">
                  <span class="input-group-text">blocks</span>
                </div>
              </div>

              <label for="cacheSize">Cache size</label>
              <div class="input-group pb-2">
                <input type="text" class="form-control" id="cacheSize" aria-label="cacheSize">
                <div class="input-group-append">
                  <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">blocks</button>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">blocks</a>
                    <a class="dropdown-item" href="#">addresses</a>
                  </div>
                </div>
              </div>

              <label for="memorySize">Memory size</label>
              <div class="input-group pb-2">
                <input type="text" class="form-control" id="memorySize" aria-label="memorySize">
                <div class="input-group-append">
                  <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">blocks</button>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">blocks</a>
                    <a class="dropdown-item" href="#">addresses</a>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-6">
              <label for="cacheTime">Cache access time</label>
              <div class="input-group pb-2">
                <input type="text" class="form-control" id="cacheTime" aria-label="cacheTime">
                <div class="input-group-append">
                  <span class="input-group-text" id="basic-addon2">nanoseconds (ns)</span>
                </div>
              </div>

              <label for="memoryTime">Memory access time</label>
              <div class="input-group pb-2">
                <input type="text" class="form-control" id="memoryTime" aria-label="memoryTime">
                <div class="input-group-append">
                  <span class="input-group-text" id="basic-addon2">nanoseconds (ns)</span>
                </div>
              </div>

              <label for="inputType">Input type</label>
              <div class="input-group pb-2">
                <select class="form-control" id="inputType">
                  <option>blocks</option>
                  <option>addresses</option>
                </select>
              </div>
              <label for="querySequence">Query sequence</label>
              <div class="input-group pb-2">
                <input type="text" class="form-control" id="querySequence" aria-label="querySequence">
              </div>
              
            </div> <!-- second col -->
          </div> <!-- card row -->
        </div> <!-- card body -->

        <div class="card-footer text-right card-footer-margin">
          <button type="button" class="btn btn-secondary btn-lg">Reset</button>
          <button type="button" class="btn btn-primary btn-lg">Simulate</button>
        </div> <!-- card footer-->

      </div> <!-- card --> 
    </div> <!-- col -->
    </div> 
    
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-10 h-75">
        <div class="card">
            <div class="card-header">Cache table</div>
              <div class="card-body">
                <div class="row justify-content-center align-items-center">
                  <div class="col-8">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th scope="col">Set</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <th scope="row">0</th>
                          <td></td>
                          <td></td>
                          <td></td>
                        </tr>
                        <tr>
                          <th scope="row">1</th>
                          <td></td>
                          <td></td>
                          <td></td>
                        </tr>
                        <tr>
                          <th scope="row">2</th>
                          <td></td>
                          <td></td>
                          <td></td>
                        </tr>
                        <tr>
                          <th scope="row">3</th>
                          <td></td>
                          <td></td>
                          <td></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
                
              </div>  <!-- card body -->
            
            <div class="row card-footer text-muted card-footer-margin">
              <div class="form-group col-4">
                <label for="cacheMiss">Cache misses</label>
                <input type="text" class="form-control form-control-sm" id="cacheMiss">
              </div>
              <div class="form-group col-4">
                <label for="cacheHit">Cache hits</label>
                <input type="text" class="form-control form-control-sm" id="cacheHit">
              </div>
              <div class="form-group col-4">
                <label for="totalQueries">Total queries</label>
                <input type="text" class="form-control form-control-sm" id="totalQueries">
              </div>
              <div class="form-group col-4">
                <label for="missPenalty">Miss penalty</label>
                <input type="text" class="form-control form-control-sm" id="missPenalty">
              </div>
              <div class="form-group col-4">
                <label for="averageAccessTime">Average access time (ns)</label>
                <input type="text" class="form-control form-control-sm" id="averageAccessTime">
              </div>
              <div class="form-group col-4">
                <label for="totalAccessTime">Total access time (ns)</label>
                <input type="text" class="form-control form-control-sm" id="totalAccessTime">
              </div>
            </div>
        </div> <!-- card -->
      </div> <!-- col -->
    </div> <!-- row-->  
  </div> <!-- MAIN CONTAINER-->
  <script type="text/javascript" src="/javascripts/cacheSimulation.js"></script>
</body>
</html>