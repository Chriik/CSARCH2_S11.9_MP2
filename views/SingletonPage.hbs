<div class="container-fluid p-3">
	<h1 class="text-center">Simpleton BSA Simulator</h1>
    <div class="row pt-4 pb-4">
      <div class="col-5">
        <label for="basic-url">Word size</label>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="" aria-label="Word size" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <span class="input-group-text" id="basic-addon2">bits</span>
          </div>
        </div>
        <label for="basic-url">Block size</label>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="" aria-label="Block size" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <span class="input-group-text" id="basic-addon2">words</span>
          </div>
        </div>
        <label for="basic-url">Set size</label>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="" aria-label="Set size" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <span class="input-group-text" id="basic-addon2">blocks</span>
          </div>
        </div>
        <label for="basic-url">Cache size</label>
        <div class="input-group">
          <input type="text" class="form-control" aria-label="Text input with dropdown button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">blocks</button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#">blocks</a>
              <a class="dropdown-item" href="#">addresses</a>
            </div>
          </div>
        </div>
        <label for="basic-url">Memory size</label>
        <div class="input-group">
          <input type="text" class="form-control" aria-label="Text input with dropdown button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">blocks</button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#">blocks</a>
              <a class="dropdown-item" href="#">addresses</a>
            </div>
          </div>
        </div>
        <label for="basic-url">Cache access time</label>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="" aria-label="Word size" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <span class="input-group-text" id="basic-addon2">ns</span>
          </div>
        </div>
        <label for="basic-url">Memory access time</label>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="" aria-label="Word size" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <span class="input-group-text" id="basic-addon2">ns</span>
          </div>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Input type</label>
          <select class="form-control" id="exampleFormControlSelect1">
            <option>blocks</option>
            <option>addresses</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Query sequence</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="btn-group-justified">
          <button type="button" class="btn btn-primary">Simulate</button>
          <button type="button" class="btn btn-outline-secondary">Save to file</button>
			  </div>
      </div> <!--END OF LEFT -->

      <div class="col-7">
        <div class="row">
          <div class="col-10">
            <div class="card">
              <div class="card-header">Cache results</div>
              <div class="card-body">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th scope="col">Set</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th scope="row">0</th>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                    <tr>
                      <th scope="row">1</th>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                    <tr>
                      <th scope="row">2</th>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                    <tr>
                      <th scope="row">3</th>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="row card-footer text-muted card-footer-margin">
                <div class="form-group col-4">
                  <label for="formGroup1">Cache misses</label>
                  <input type="number" class="form-control form-control-sm">
                </div>
                <div class="form-group col-4">
                  <label for="formGroup1">Cache hits</label>
                  <input type="number" class="form-control form-control-sm">
                </div>
                <div class="form-group col-4">
                  <label for="formGroup1">Total queries</label>
                  <input type="number" class="form-control form-control-sm">
                </div>
              </div>
              <div class="row card-footer text-muted card-footer-margin">
                <div class="form-group col-4">
                  <label for="formGroup1">Miss penalty</label>
                  <input type="number" class="form-control form-control-sm">
                </div>
                <div class="form-group col-4">
                  <label for="formGroup1">Average access time</label>
                  <input type="number" class="form-control form-control-sm">
                </div>
                <div class="form-group col-4">
                  <label for="formGroup1">Total access time</label>
                  <input type="number" class="form-control form-control-sm">
                </div>
              </div>
      
            </div>
            
          </div>
          
        </div>
        
        
      </div> <!--RIGHT PANEL-->
      
      
    </div> <!-- MAIN ROW -->


      
  </div> <!-- MAIN CONTAINER-->
