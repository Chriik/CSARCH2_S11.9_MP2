<div class="container mt-5 mb-3 pl-5 pr-5">
    <div class="row pt-5 pl-2 pb-4 text-right">
    <h2>Sequential BSA-MRU Simulator</h2>
  </div>
  <div class="row pl-5 pr-5">
    <div class="col-12">
      <h4>Initialization</h4> 
    </div>
    <div class="col-md-lg-12 col-sm-6 col-xs-6">
      <div class="form-group pb-2">
        <label for="inputType">Input type</label>
        <select class="form-control" id="inputType">
          <option>blocks</option>
          <option>addresses</option>
        </select>
      </div>
        <label for="blockSize">Block size</label>
        <div class="input-group pb-2">
          <input type="number" class="form-control" id="blockSize" aria-label="blockSize">
          <div class="input-group-append">
            <span class="input-group-text">words</span>
          </div>
        </div>
        <div class="row ml-2 pb-3">
          <small id="blockError" class="text-danger input-error"></small>
        </div>

        <label for="setSize">Set size</label>
        <div class="input-group pb-2">
          <input type="number" class="form-control" id="setSize" aria-label="setSize">
          <div class="input-group-append">
            <span class="input-group-text">blocks</span>
          </div>
        </div>
        <div class="row ml-2 pb-3">
          <small id="setError" class="text-danger input-error"></small>
        </div>

        <label for="cacheSize">Cache size</label>
        <div class="input-group pb-2">
            <input type="number" class="form-control" id="cacheSize" aria-label="cacheSize">
            <div class="dropdown input-group-append">
                <button class="btn btn-outline-secondary dropdown-toggle" id="cacheSizeDropdown" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">blocks</button>
                <div class="dropdown-menu" id="cacheSizeOptions">
                    <a class="dropdown-item" value="blocks">blocks</a>
                    <a class="dropdown-item" value="words">words</a>
                </div>
            </div>
        </div>
        <div class="row ml-2 pb-3">
            <small id="cacheError" class="text-danger input-error"></small>
        </div>
    </div>

    <div class="col-md-lg-12 col-sm-6 col-xs-6">
      <label for="cacheTime">Cache access time</label>
        <div class="input-group pb-2">
          <input type="number" class="form-control" id="cacheTime" aria-label="cacheTime">
          <div class="input-group-append">
            <span class="input-group-text">ns</span>
          </div>
        </div>
        <div class="row ml-2 pb-3">
          <small id="cacheTimeError" class="text-danger input-error"></small>
        </div>
        <label for="memorySize">Memory size</label>
        <div class="input-group pb-2">
          <input type="number" class="form-control" id="memorySize" aria-label="memorySize">
          <div class="dropdown input-group-append">
            <button class="btn btn-outline-secondary dropdown-toggle" id="memorySizeDropdown" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">blocks</button>
            <div class="dropdown-menu" id="memorySizeOptions">
              <a class="dropdown-item" value="blocks">blocks</a>
              <a class="dropdown-item" value="words">words</a>
            </div>
          </div>
        </div>
        <div class="row ml-2 pb-3">
          <small id="memoryError" class="text-danger input-error"></small>
        </div>

      <label for="memoryTime">Memory access time</label>
        <div class="input-group pb-2">
          <input type="number" class="form-control" id="memoryTime" aria-label="memoryTime">
          <div class="input-group-append">
            <span class="input-group-text">ns</span>
          </div>
        </div>
        <div class="row ml-2 pb-3">
          <small id="memoryTimeError" class="text-danger input-error"></small>
        </div>
    </div> <!-- END OF COL 2 -->
  </div> <!-- ROW -->
  <div class="row pt-3 pl-5 pr-5">
    <div class="col-6 pb-2">
      <h4>Task configuration</h4>
    </div>
    <div class="col-6 text-right">
      <button class="btn btn-danger btn-sm rounded-circle" id="removeTaskButton"><span class="fas fa-minus"></span></button>
      <button class="btn btn-success btn-sm rounded-circle" id="addTaskButton"><i class="fas fa-plus"></i></button>
    </div>
  </div>
  <div class="row pl-5 pr-5">
    <div class="col-12">
      <div id="taskList">
          <div class="task-group">
            <h5>Task 1</h5>
            <div class="row">
              <div class="form-group col-lg-4 col-md-sm-12">
                  <label for="lowerRange-1">Lower range</label>
                  <input type="number" class="form-control form-control-sm lower-range" id="lowerRange-1">
                  <small id="lowerError-1" class="text-danger input-error"></small>
              </div>

              <div class="form-group col-lg-4 col-md-sm-12">
                  <label for="upperRange-1">Upper range</label>
                  <input type="number" class="form-control form-control-sm upper-range" id="upperRange-1">
                  <small id="upperError-1" class="text-danger input-error"></small>
              </div>

              <div class="form-group col-lg-4 col-md-sm-12">
                  <label for="loopCount-1">Loop count</label>
                  <input type="number" class="form-control form-control-sm loop-count" id="loopCount-1">
                  <small id="loopError-1" class="text-danger input-error"></small>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

  <div class="row pt-5 pr-2 pb-5 text-right">
    <div class="col-12">
      <button class="btn btn-secondary" id="resetButton"><i class="fas fa-redo-alt mr-2"></i>Reset</button>
      <button class="btn btn-primary" id="simulateButton">Simulate</button>
    </div>
  </div>
</div> <!-- MAIN CONTAINER-->
<div class="container mt-3 mb-3 pl-5 pr-5">
    <div class="row pt-5 pl-2 pb-4 text-right">
    <h2 style="color: #3F51B5; font-weight:600;">Cache Results</h2> 
  </div>

  <div class="row justify-content-center">
    <div class="col-12 pl-5 pr-5" id="tableHolder">
      <table class="table table-bordered" id="dummyTable">
        <thead>
          <tr>
            <th scope="col">Set</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <tr>
              <th scope="row">0</th>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <th scope="row">1</th>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <th scope="row">3</th>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
    </div>
  </div> <!-- Table row-->
  <div class="col-12 pl-5 pr-5 pt-3 pb-3">
    <div class="row text-muted">
      <div class="form-group col-lg-4 col-md-sm-12">
        <label for="cacheMisses">Cache misses</label>
        <input type="text" class="form-control form-control-sm" id="cacheMisses" readonly>
      </div>

      <div class="form-group col-lg-4 col-md-sm-12">
        <label for="cacheHits">Cache hits</label>
        <input type="text" class="form-control form-control-sm" id="cacheHits" readonly>
      </div>

      <div class="form-group col-lg-4 col-md-sm-12">
        <label for="totalQueries">Total queries</label>
        <input type="text" class="form-control form-control-sm" id="totalQueries" readonly>
      </div>
    </div>

    <div class="row text-muted">
      <div class="form-group col-lg-4 col-md-sm-12">
        <label for="missPenalty">Miss penalty</label>
        <input type="text" class="form-control form-control-sm" id="missPenalty" readonly>
      </div>
      <div class="form-group col-lg-4 col-md-sm-12">
        <label for="averageTime">Average access time</label>
        <div class="input-group pb-2">
          <input type="text" class="form-control form-control-sm" id="averageTime" aria-label="averageTime" readonly>
          <div class="input-group-append">
            <span class="input-group-text">ns</span>
          </div>
        </div>
      </div>
      <div class="form-group col-lg-4 col-md-sm-12">
        <label for="totalTime">Total access time</label>
        <div class="input-group pb-2">
          <input type="text" class="form-control form-control-sm" id="totalTime" aria-label="totalTime" readonly>
          <div class="input-group-append">
            <span class="input-group-text">ns</span>
          </div>
        </div>
      </div>
    </div>
  </div>
    <div class="row pt-3 pr-2 pb-5 text-right">
      <div class="col-12">
        <button class="btn btn-primary" id="saveToFileButton"><i class="far fa-file-alt mr-2"></i>Save as text file</button> 
      </div>
    </div>
